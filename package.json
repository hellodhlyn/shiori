{
  "name": "shiori",
  "version": "1.0.0",
  "author": "Do Hoerin <lyn@lynlab.co.kr>",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint -c .eslintrc.json 'src/**/*.ts'",
    "test": "NODE_ENV=test mocha -r ts-node/register -r test/prepare.ts --fule-trace --reporter dot 'test/**/*.ts'",
    "coverage": "NODE_ENV=test nyc mocha -r ts-node/register -r test/prepare.ts --fule-trace --reporter dot 'test/**/*.ts'",
    "debug": "nodemon --watch src --ext ts,graphql --exec 'yarn build && yarn start'",
    "prebuild": "rimraf ./dist",
    "build": "tsc",
    "postbuild": "copyfiles -u 1 src/**/*.graphql dist",
    "start": "node .",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "typeorm:migrate": "yarn typeorm migration:run",
    "typeorm:revert": "yarn typeorm migration:revert",
    "typeorm:show": "yarn typeorm migration:show"
  },
  "dependencies": {
    "@koa/cors": "2",
    "graphql": "^14.6.0",
    "koa": "^2.11.0",
    "koa-graphql": "^0.8.0",
    "koa-mount": "^4.0.0",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25",
    "typeorm-naming-strategies": "^1.1.0",
    "typeorm-typedi-extensions": "^0.2.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/chai-as-promised": "^7.1.2",
    "@types/graphql": "^14.5.0",
    "@types/koa": "^2.11.2",
    "@types/koa-graphql": "^0.8.3",
    "@types/koa-mount": "^4.0.0",
    "@types/koa__cors": "^3.0.1",
    "@types/mocha": "^7.0.1",
    "@types/mocha-prepare": "^0.1.0",
    "@types/node": "^12.12.28",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "mocha": "^7.0.1",
    "mocha-prepare": "^0.1.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.0"
  }
}
